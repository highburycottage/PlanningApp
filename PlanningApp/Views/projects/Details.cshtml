@model PlanningApp.Models.project


@{
    ViewBag.Title = "Details";
}

<h2>BC @Html.DisplayFor(model => model.projectID)</h2>

<div>
    @*<h4>project</h4>*@
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Site Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.siteName)
        </dd>

        <dt>
            Address
        </dt>

        <dd>
            @Html.DisplayFor(model => model.siteAddress1)
        </dd>

        <dt>
            Address cont
        </dt>

        <dd>
            @Html.DisplayFor(model => model.siteAddress2)
        </dd>

        <dt>
            Address cont
        </dt>

        <dd>
            @Html.DisplayFor(model => model.siteAddress3)
        </dd>

        <dt>
            Post Code
        </dt>

        <dd>
            @Html.DisplayFor(model => model.sitePostCode)
        </dd>

        <dt>
            Delivery Restrictions
        </dt>

        <dd>
            @Html.DisplayFor(model => model.deliveryRestrictions)
        </dd>

        <dt>
            Construction Team
        </dt>

        <dd>
            <table class="noBorder">
                @foreach (var tag in Model.constructionStaffs)
                {
                    <tr>
                        <td>
                            @tag.userName
                        </td>
                    </tr>
                }
            </table>

        </dd>


    </dl>
</div>

<body>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <h4>New Requistion</h4>
            <p>
                Click on the button below to raise a new Requistion for this Project.
            </p>
            <p><a class="btn btn-primary" @Html.ActionLink("New Requisition", "Index", "Projects")</a></p>
        </div>
        <div class="col-md-4">
            <h4>View Requistions</h4>
            <p>
                Click on the button below to view the Requistions for this Project.
            </p>
            <p><a class="btn btn-primary" @Html.ActionLink("View Requisitions", "Index", "Projects")</a></p>
        </div>
        <div class="col-md-4">
            <h4>Drawing Register</h4>
            <p>
                Click on the button below to view the Drawing Register for this Project.
                <br />
            </p>
            <p><a class="btn btn-primary" @Html.ActionLink("Drawing Register", "Index", "drawingRegisters", new { id = Model.projectID })</a></p>
        </div>
    </div>


</body>
<div>
    <footer>
        <hr />
        <p>
            @Html.ActionLink("Edit Project Details", "Edit", new { id = Model.projectID }) |
            @Html.ActionLink("Back to List", "Index")
        </p>
    </footer>
</div>

